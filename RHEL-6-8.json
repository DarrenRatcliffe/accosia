{
    "variables": {
        "BaseOS": "RHEL",
        "OSversion": "6.8"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami": "ami-ef14f582",
        "instance_type": "t2.micro",
        "ssh_username": "ec2-user",
        "ami_name": "accosia-build-{{isotime | clean_ami_name}}",
        "ami_description": "This is a certified Atos cloud image for {{user 'BaseOS'}} {{user 'OSversion'}}",
        "ami_regions": "eu-west-2",
        "tags": {
            "Based on ami id": "{{.SourceAMI}}",
            "Produced by": "Atos SE",
            "Base OS": "{{user 'BaseOS'}}",
            "OS version": "{{user 'OSversion'}}"
        }
    }],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "sleep 30",
          "sudo uname -srv",
          "sudo {{template_dir}}/scripts/os-type.sh",
          "sudo yum update -y",
          "sudo rpm -Uvh https://dl.fedoraproject.org/pub/epel/epel-release-latest-6.noarch.rpm",
          "sudo yum install git -y",
          "sudo yum install ansible -y",
          "ansible-galaxy install dev-sec.os-hardening"
        ]
      },
        {
            "type": "ansible-local",
                "playbook_file": "playbook.yml",
                "playbook_dir": "/var/lib/jenkins/jobs/Accosia/workspace/",
                "staging_directory": "/tmp/accosia",
                "command": "ansible-playbook"
        }
    ]
  }

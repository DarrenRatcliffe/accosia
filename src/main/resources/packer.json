{
  "_comment" : "Simple Packer Template using Amazon Linux 2017.03",
  "variables": {
    "aws_access_key": "{{env `MY_ACCESS`}}",
    "aws_secret_key": "{{env `MY_SECRET`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-c58c1dd3",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "accosia-build-{{user `Build` | clean_ami_name}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo yum update -y"
    ]
  }]
}

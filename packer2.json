{
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami": "ami-c58c1dd3",
        "instance_type": "t2.micro",
        "ssh_username": "ec2-user",
        "ami_name": "accosia-build-{{isotime | clean_ami_name}}",
        "ami_description": "This is a certified Atos cloud image (add OS and OS version",
        "ami_regions": "eu-west-2",
        "tags": {
            "based_on_ami": "{{.SourceAMI}}",
            "Produced_by": "Atos SE"
        }
    }],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "sleep 30",
          "sudo yum update -y",
          "sudo yum install git -y",
          "sudo yum install ansible --enablerepo=epel --enablerepo=epel-testing -y",
          "sudo ansible-galaxy install git+https://github.com/openstack/ansible-hardening"
        ]
      },
      {
        "type": "ansible-local",
        "playbook_file": "/var/lib/jenkins/jobs/Accosia/workspace/playbook.yml"
      }
    ]
  }
